<div class="card publicStoryTitle">
    <h1>   More stories from {{story.user.displayName}} ðŸ“• </h1>
</div>
<div class="row flex">
    {{#each stories}}
    <div class="col s12 m4" >
        <div class="card hover-grow">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{truncate title 80}}</h5>
                <p>{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip hover-grow">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class=" hover-border btn grey">Read More</a>
            </div>
        </div>
    </div>
   
    {{else}}
    <p>No stories to display</p>
    {{/each}}
 </div>